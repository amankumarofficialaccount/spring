<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
xsi:schemaLocation="http://www.springframework.org/schema/beans
  http://www.springframework.org/schema/beans/spring-beans.xsd">

<!--    Dependent Class -->
  <bean id="dtdc" class="com.aman.beans.dtdc" scope="prototype" lazy-init="default"/>
  <bean id="bluedart" class="com.aman.beans.bluedart" scope="prototype"/>
  
<!--   Target Class -->
    <bean id="fkt" class="com.aman.beans.Flipkart">
    <property name="courier" ref="bluedart"/>
    </bean>

</beans>